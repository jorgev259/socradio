{
  "name": "socradio_web_react",
  "version": "1.0.1",
  "private": true,
  "eslintConfig": {
    "extends": "react-app"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "customize-cra": "^0.9.1",
    "react-app-rewired": "^2.1.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "@widgetbot/crate": "^3.1.237",
    "@widgetbot/embed-api": "^1.1.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "bestzip": "^2.1.5",
    "dat.gui": "^0.7.6",
    "hookrouter": "^1.2.3",
    "jquery": "^3.4.1",
    "moment": "^2.24.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "release-it": "^12.4.3",
    "socket.io-client": "^2.3.0"
  },
  "scripts": {
    "release": "git clone https://github.com/jorgev259/socradio_web -b dist .stage && npm run build && xcopy /s src\\*.* dest",
    "zip": "cd build/ && bestzip ../dist/release.zip * && cd ..",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "release-it": {
    "increment": "minor",
    "git": { "tagName": "v${version}" },
    "npm": { "publish": false },
    "hooks": {
      "before:init": "git clone https://github.com/jorgev259/socradio_web -b dist .stage",
      "before:release": "npm run build",
      "after:release": "cd .stage && git add . --all && git commit -m 'Updated!' && git push && cd -"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
